    <nav>
        <a href="{{ "{{ path('" ~ route_name_prefix ~ "_index') }}" }}" class="btn btn-default">{{ "{{ 'action.back_to_list' | trans }}" }}</a>
        {%- if ('edit' in actions) and (not hide_edit) %}

        {{ "{% if is_granted('"~entity_singularized|upper~"_EDIT') %}" }}
            <a href="{{ "{{ path('" ~ route_name_prefix ~ "_edit', { '"~ identifier ~"': " ~ entity_singularized ~ "."~ identifier ~" }) }}" }}" class="btn btn-warning">
                {{ "{{ 'action.edit' | trans }}" }}
            </a>
        {{ "{% endif %}" }}
        {%- endif %}
        {%- if ('delete' in actions) and (not hide_delete) %}

        {{ "{% if is_granted('"~entity_singularized|upper~"_DELETE') %}" }}
            <a href="#delete" class="btn btn-danger" onclick="if(confirm('{{ "{{ 'crud.confirm_delete' | trans }}" }}')){ document.getElementById('{{ "{{ delete_form.vars.id }}" }}').submit() }">
                {{ "{{ 'action.delete' | trans }}" }}
            </a>
            {{ '{{ form(delete_form) }}' }}
        {{ "{% endif %}" }}
        {%- endif %}

    </nav>
